generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id        Int        @id @default(autoincrement())
  name      String
  city      String
  menuItems MenuItem[]
}

model MenuItem {
  id           Int        @id @default(autoincrement())
  dishName     String
  price        Int
  restaurantId Int
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  orders       Order[]

  @@index([dishName])
  @@index([price])
}

model Order {
  id         Int      @id @default(autoincrement())
  menuItemId Int
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
}
